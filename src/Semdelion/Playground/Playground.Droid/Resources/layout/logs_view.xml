<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android       ="http://schemas.android.com/apk/res/android"
    xmlns:local         ="http://schemas.android.com/apk/res-auto"
    xmlns:tools         ="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id           ="@+id/log_app_bar_layout"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            style                       ="@style/Semdelion.Widget.Toolbar.Style"
            android:id                  ="@+id/log_toolbar"
            android:animateLayoutChanges="true"
            android:layout_width        ="match_parent"
            android:layout_height       ="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>
    <HorizontalScrollView
        android:id                            ="@+id/logs_filter_scroll"
        android:layout_width                  ="0dp"
        android:layout_height                 ="wrap_content"
        local:layout_constraintEnd_toEndOf    ="parent"
        local:layout_constraintStart_toStartOf="parent"
        local:layout_constraintTop_toBottomOf ="@+id/log_app_bar_layout" 
        android:scrollbars                    ="none">
        <LinearLayout
            android:layout_width       ="match_parent"
            android:layout_height      ="wrap_content"
            android:paddingTop         ="8dp"
            android:paddingBottom      ="8dp"
            android:orientation        ="horizontal">
            <CheckBox
                android:layout_width      ="wrap_content"
                android:layout_height     ="match_parent"
                android:paddingLeft       ="16dp"
                android:paddingRight      ="16dp"
                android:paddingTop        ="8dp"
                android:paddingBottom     ="8dp"
                android:minWidth          ="80dp"
                android:button            ="@null"
                android:gravity           ="center"
                android:textAllCaps       ="true"
                android:background        ="@drawable/checkbox_selector"
                android:checked           ="false"
                android:layout_marginLeft ="4dp"
                android:layout_marginRight="4dp"
                android:textColor         ="#dddddd"
                android:textStyle         ="bold"
                android:text              ="Fatal"
                local:MvxBind             ="Checked Fatal"/>
            <CheckBox
                android:layout_width      ="wrap_content"
                android:layout_height     ="match_parent"
                android:paddingLeft       ="16dp"
                android:paddingRight      ="16dp"
                android:paddingTop        ="8dp"
                android:paddingBottom     ="8dp"
                android:minWidth          ="80dp"
                android:button            ="@null"
                android:gravity           ="center"
                android:textAllCaps       ="true"
                android:background        ="@drawable/checkbox_selector"
                android:checked           ="false"
                android:layout_marginLeft ="4dp"
                android:layout_marginRight="4dp"
                android:textColor         ="#dddddd"
                android:textStyle         ="bold"
                android:text              ="Error"
                local:MvxBind             ="Checked Error"/>
            <CheckBox
                android:layout_width      ="wrap_content"
                android:layout_height     ="match_parent"
                android:paddingLeft       ="16dp"
                android:paddingRight      ="16dp"
                android:paddingTop        ="8dp"
                android:paddingBottom     ="8dp"
                android:minWidth          ="80dp"
                android:button            ="@null"
                android:gravity           ="center"
                android:textAllCaps       ="true"
                android:background        ="@drawable/checkbox_selector"
                android:checked           ="false"
                android:layout_marginLeft ="4dp"
                android:layout_marginRight="4dp"
                android:textColor         ="#dddddd"
                android:textStyle         ="bold"
                android:text              ="Warn"
                local:MvxBind             ="Checked Warn"/>
            <CheckBox
                android:layout_width      ="wrap_content"
                android:layout_height     ="match_parent"
                android:paddingLeft       ="16dp"
                android:paddingRight      ="16dp"
                android:paddingTop        ="8dp"
                android:paddingBottom     ="8dp"
                android:minWidth          ="80dp"
                android:button            ="@null"
                android:gravity           ="center"
                android:textAllCaps       ="true"
                android:background        ="@drawable/checkbox_selector"
                android:checked           ="false"
                android:layout_marginLeft ="4dp"
                android:layout_marginRight="4dp"
                android:textColor         ="#dddddd"
                android:textStyle         ="bold"
                android:text              ="Info"
                local:MvxBind             ="Checked Info"/>
            <CheckBox
                android:layout_width      ="wrap_content"
                android:layout_height     ="match_parent"
                android:paddingLeft       ="16dp"
                android:paddingRight      ="16dp"
                android:paddingTop        ="8dp"
                android:paddingBottom     ="8dp"
                android:minWidth          ="80dp"
                android:button            ="@null"
                android:gravity           ="center"
                android:textAllCaps       ="true"
                android:background        ="@drawable/checkbox_selector"
                android:checked           ="false"
                android:layout_marginLeft ="4dp"
                android:layout_marginRight="4dp"
                android:textColor         ="#dddddd"
                android:textStyle         ="bold"
                android:text              ="Trace"
                local:MvxBind             ="Checked Trace"/>
            <CheckBox
                android:layout_width      ="wrap_content"
                android:layout_height     ="match_parent"
                android:paddingLeft       ="16dp"
                android:paddingRight      ="16dp"
                android:paddingTop        ="8dp"
                android:paddingBottom     ="8dp"
                android:minWidth          ="80dp"
                android:button            ="@null"
                android:gravity           ="center"
                android:textAllCaps       ="true"
                android:background        ="@drawable/checkbox_selector"
                android:checked           ="false"
                android:layout_marginLeft ="4dp"
                android:layout_marginRight="4dp"
                android:textColor         ="#dddddd"
                android:textStyle         ="bold"
                android:text              ="Debug"
                local:MvxBind             ="Checked Debug"/>
        </LinearLayout>
    </HorizontalScrollView>
    <MvvmCross.DroidX.RecyclerView.MvxRecyclerView
		    android:id				                      ="@+id/logs_recycler_view"
		    android:orientation		                  ="vertical"
        android:layout_width                    ="0dp"
        android:layout_height                   ="0dp"
        local:layout_constraintBottom_toBottomOf="parent"
        local:layout_constraintEnd_toEndOf      ="parent"
        local:layout_constraintStart_toStartOf  ="parent"
        local:layout_constraintTop_toBottomOf   ="@+id/logs_filter_scroll"
        local:MvxBind                           ="ItemsSource Items"
		    local:MvxItemTemplate                   ="@layout/_template_log_item"/>
</androidx.constraintlayout.widget.ConstraintLayout>
