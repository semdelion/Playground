<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android             ="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft ="32dp"
    android:layout_marginRight="32dp"
    android:layout_width       ="match_parent"
    android:layout_height      ="wrap_content"
    android:orientation        ="vertical"
    android:gravity            ="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/_template_map_info_window_imageview"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:adjustViewBounds="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                style           ="@style/Semdelion.TextAppearance.Body.B2"
                android:id="@+id/_template_map_info_window_textview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true" />
            <TextView
                style                      ="@style/Semdelion.TextAppearance.Caption"
                android:id="@+id/_template_map_info_window_textview_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:singleLine="false"
                android:maxLines="2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>