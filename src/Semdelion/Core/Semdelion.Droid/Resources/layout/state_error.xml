<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android            ="http://schemas.android.com/apk/res/android"
    xmlns:local              ="http://schemas.android.com/apk/res-auto"
    xmlns:tools              ="http://schemas.android.com/tools"
    android:layout_width     ="match_parent"
    android:layout_height    ="match_parent">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width                  ="0dp"
        android:layout_height                 ="0dp"
        local:lottie_autoPlay                 ="true"
        local:lottie_fileName                 ="state_error.json"
        local:lottie_loop                     ="true"
        local:layout_constraintBottom_toTopOf ="@+id/state_error_guideline"
        local:layout_constraintEnd_toEndOf    ="parent"
        local:layout_constraintStart_toStartOf="parent"
        local:layout_constraintTop_toTopOf    ="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id                            ="@+id/state_error_guideline"
        android:layout_width                  ="wrap_content"
        android:layout_height                 ="wrap_content"
        android:orientation                   ="horizontal"
        local:layout_constraintGuide_percent  ="0.7" />
    <TextView
        style                                 ="@style/Semdelion.TextAppearance.Subtitle.S1"
        android:id                            ="@+id/state_error_textView"
        android:layout_width                  ="0dp"
        android:layout_height                 ="wrap_content"
        android:gravity                       ="center"
        local:MvxLang                         ="Text State.Error"
        local:layout_constraintEnd_toEndOf    ="parent"
        local:layout_constraintHorizontal_bias="0.0"
        local:layout_constraintStart_toStartOf="parent"
        local:layout_constraintTop_toTopOf    ="@+id/state_error_guideline"
        tools:text                            ="Ошибка"/>
</androidx.constraintlayout.widget.ConstraintLayout>